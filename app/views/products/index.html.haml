    - @products.each do |product|
      .col-sm-4.col-md-3.proto-content
        -if user_signed_in? && current_user.id == product.user_id
          .dropdown.drop_menu_location
            %button.btn.btn-default.dropdown-taggle{ id: "dropdownMenu", type: "button",  data: { toggle: "dropdown" } } ACTION
            %ul.dropdown-menu{ aria: { labelledby: "dropdownMenu1" } }
              %li
                =link_to "Delete", product_path(product), rel: "nofollow", data: { method: "delete" }
              %li
                =link_to "Edit", edit_product_path(product)

        .thumbnail
          = image_tag(product.pictures.main[0].image) if product.pictures.main.first
          .caption
            %h3
              = link_to product.title, product_path(product.id)
            .proto-meta
              .proto-user
                = product.user.nickname
              .proto-posted
                = product.created_at
