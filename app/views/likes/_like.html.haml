- if user_signed_in?
  -if @product.likes.select{ |like| like.user_id == like.user.id }.blank?
    = button_to product_likes_path(@product,@like), method: :post, class: "btn btn-default increment-button", remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num
        = @product.likes.count
  - else
    = button_to product_like_path(@product, @like), method: :delete, class: "btn btn-default decrement-button", remote: true do
      = image_tag("icom_heart_red.svg")
      LIKE
      %span.num
        = @product.likes.count
