.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = image_tag(@product.user.avatar, alt: "64×64", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @product.title
          .proto-user
            %a{href: ""} by User
            %span.degree we-b inc. Designer
    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag("sample.png", class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        %li.list-group-item
          = image_tag("sample.jpg", class: 'img-responsive')
        %li.list-group-item
          = image_tag("sample.jpg", class: 'img-responsive')
        %li.list-group-item
          = image_tag("sample.jpg", class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p 小田原　光太
    .col-md-6
      %h4 Concept
      %p protospaceデザイン修正
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li 
          %a{href: "#", class: "btn btn-default"} iPad
        %li 
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10) 
    .col-md-8
      .media
        .media-left
          %a{href: "#"}
            %img.media-object{alt: "64x64", data: { holder:{rendered: true}}, data: { src: "holder.js/64x64"}, src: "", style: "width: 64px; height: 64px;"}/

      %form.form-inline{role: "form"}
        %h4 Write a comment
        .row
          .form-group.col-md-10
            %textarea.form-control{placeholder: "Your comments", rows: "3"}
          .form-group.col-md-2
            %button.btn.btn-primary Comment
            
