.container.proto-new
  = form_for @product do |f|
    -if @product.errors.any?
      %ul
        = @product.errors.full_messages.each do |message|
          %li
            = message
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title" 
      .row
        .col-md-12
          .cover-image-upload
            =f.file_field :image1
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload
            %li.list-group-item.col-md-4
              .image-upload
                =f.file_field :image3, multipart: "true"
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{:type => "text", :placeholder => "Web Design"}/
            .col-md-3
              %input{:type => "text", :placeholder => "UI"}/
            .col-md-3
              %input{:type => "text", :placeholder => "Application"}/
        = f.hidden_field :user_id
      .row.text-center.proto-btn
        =f.submit "Publish",class: "btn btn-lg btn-primary btn-block"
