= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image1
    = f.text_area :image1
  .field
    = f.label :image2
    = f.text_area :image2
  .field
    = f.label :image3
    = f.text_area :image3
  .field
    = f.label :catch_copy
    = f.text_field :catch_copy
  .field
    = f.label :concept
    = f.text_field :concept
  .actions
    = f.submit 'Save'
