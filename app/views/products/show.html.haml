.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = image_tag(@product.user.avatar, alt: "64Ã—64", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @product.title
          .proto-user
            %a{href: ""} by User
            %span.degree we-b inc. Designer
    .col-md-6.text-right#like-button
      = render 'likes/like'
  .row
    .col-md-9
      = image_tag(@product.pictures.main[0].image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        %li.list-group-item
          = image_tag(@product.pictures.sub[0].image, class: 'img-responsive')
        %li.list-group-item
          = image_tag(@product.pictures.sub[1].image, class: 'img-responsive')
        %li.list-group-item
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p 
      = @product.catch_copy
    .col-md-6
      %h4 Concept
      %p
      = @product.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li 
          %a{href: "#", class: "btn btn-default"} iPad
        %li 
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comment
      %span.num#comments_counter
        = "(#{ @comments.count })"
    .col-md-8
      #comments
        = render partial: 'comments/comment', collection: @comments
      .form-inline
      - if user_signed_in?
        = form_for [@product, @comment], remote: true do |f|
          = f.hidden_field :user_id, value: current_user.id
          = f.hidden_field :product_id, value: @product.id
          %h4 Write a comment
          .row
            .form-group.col-md-10
              = f.text_area :text, rows: "3", placeholder: "Your comments", id: "comments_area", class: "form-control"
            .form-group.col-md-2
              = f.submit "COMMENT", class: "button btn btn-primary"
