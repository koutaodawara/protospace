- if user_signed_in?
  -if product.like_function?(current_user)
    = button_to product_like_path(product.id, product.like_function?(current_user).id), method: :delete, class: "btn btn-default increment-button", remote: true do
      = image_tag("icom_heart_red.svg")
      LIKE
      %span.num
        = product.likes.count
  - else
    = button_to product_likes_path(product), method: :post, class: "btn btn-default decrement-button", remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num
        = product.likes.count
- else
  %button.btn.btn-default.btn--like
    = image_tag("icon_heart.svg")
    Like
    %span#likes_number.num
      = product.likes.count
